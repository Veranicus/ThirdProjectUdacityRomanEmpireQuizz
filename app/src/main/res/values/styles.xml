    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Primary theme color of the app (sets background color of app bar) -->
        <item name="colorPrimary">#D32F2F</item>
        <!-- Background color of buttons in the app -->
        <item name="colorButtonNormal">#D32F2F</item>
    </style>

    <style name="Buttons">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="ShooterName">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="NumberViewStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#000000</item>
    </style>
</resources>